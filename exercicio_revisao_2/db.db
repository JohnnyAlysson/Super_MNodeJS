



CREATE DATABASE escola;

USE escola;

CREATE TABLE professores(
	id INT AUTO_INCREMENT PRIMARY KEY,
	nome VARCHAR(100),
    cpf CHAR(14)
);

CREATE TABLE turmas(
	id INT AUTO_INCREMENT PRIMARY KEY,
    nome VARCHAR(10),
    id_professor INT,
    FOREIGN KEY (id_professor) REFERENCES professores(id)
);


